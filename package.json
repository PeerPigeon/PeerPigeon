{
  "name": "peerpigeon",
  "version": "0.0.6",
  "description": "WebRTC-based peer-to-peer mesh networking library with intelligent routing and signaling server",
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "scripts": {
    "dev": "http-server . -p 8080 -c-1",
    "start": "node websocket-server/server.js",
    "server": "node websocket-server/server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest test/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest test/integration",
    "test:media": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest test/unit/media-simple.test.js",
    "test:media-only": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest test/unit/media-only.test.js",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:watch": "jest --watch",
    "test:custom": "node test/unit/crypto.test.js && node test/unit/mesh.test.js && node test/integration/integration.test.js",
    "test:all": "node test/runner.js",
    "lint": "eslint src/ examples/ websocket-server/ --ext .js",
    "lint:fix": "eslint src/ examples/ websocket-server/ --ext .js --fix",
    "benchmark": "node test/benchmark.js",
    "ci": "npm run lint && npm run test:unit",
    "prepublishOnly": "npm run ci"
  },
  "files": [
    "index.js",
    "src/",
    "server/",
    "websocket-server/",
    "examples/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draeder/peerpigeon.git"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "mesh",
    "networking",
    "decentralized",
    "kademlia",
    "signaling",
    "websocket",
    "peer-to-peer",
    "dht",
    "gossip",
    "mesh-network",
    "xor-routing",
    "webrtc-mesh"
  ],
  "author": "Daniel Raeder",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/draeder/peerpigeon/issues"
  },
  "homepage": "https://github.com/draeder/peerpigeon#readme",
  "dependencies": {
    "@koush/wrtc": "^0.5.3",
    "unsea": "^1.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "http-server": "^14.1.1",
    "jest": "^30.0.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 1%"
  ],
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "__DEV__": true
    },
    "transform": {},
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov", 
      "html"
    ],
    "verbose": true,
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "testTimeout": 30000,
    "detectOpenHandles": true,
    "forceExit": true,
    "clearMocks": true
  }
}
