{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    // Disable whitespace-related rules
    "no-trailing-spaces": "off",
    "no-multiple-empty-lines": "off",
    "no-multi-spaces": "off",
    "eol-last": "off",
    "indent": "off",
    "space-before-blocks": "off",
    "space-in-parens": "off",
    "space-infix-ops": "off",
    "space-unary-ops": "off",
    "spaced-comment": "off",
    "padded-blocks": "off",
    "key-spacing": "off",
    "comma-spacing": "off",
    "func-call-spacing": "off",
    "object-curly-spacing": "off",
    "array-bracket-spacing": "off",
    "computed-property-spacing": "off",
    "block-spacing": "off",
    "keyword-spacing": "off",
    "semi-spacing": "off",
    "arrow-spacing": "off",
    "generator-star-spacing": "off",
    "yield-star-spacing": "off",
    "template-curly-spacing": "off",
    "rest-spread-spacing": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "coverage/",
    "dist/",
    "build/"
  ]
}
